<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="media_category"
        app:title="@string/media">


    <SwitchPreferenceCompat
        app:key="autoplayVideos"
        app:title="@string/auto_play_videos"
        app:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:key="other_category"
        app:title="@string/other">

        <Preference
            app:key="reset_bookmarks"
            app:summary="@string/reset_bookmarks_summary"
            app:title="@string/reset_bookmarks"/>

    </PreferenceCategory>


</PreferenceScreen>
